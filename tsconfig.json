{
    "compilerOptions": {
        "lib": ["es6", "dom"],
        "types": [ "node", "express"],
        "allowJs": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "outDir": "./dist/",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "vendor/*"],
            "src/*": ["./src/*"]
        },
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es6",
        "typeRoots": ["node_modules/@types"],
        "resolveJsonModule": true
    },
    "exclude": ["clients", "dist"]
}
